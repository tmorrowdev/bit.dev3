{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "node"
    ]
  },
  "files": [
    "./src/test.ts",
    "./src/polyfills.ts"
  ],
  "include": [
    ".src",
    "node_modules/*",
    "./src/**/*.d.ts",
    "./src/**/public_api.ts"
